{
  "name": "arduino-ml",
  "scopeName": "source.arduino-ml",
  "fileTypes": [
    ".aml"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.arduino-ml",
      "match": "\\b(Actuator|analog|AnalogActuator|AnalogSensor|and|app|bips|bricks|Buzzer|digital|for|initial|is|LCD|machine|machines|makes|ms|or|period|plays|Sensor|Serial|state|states|status|TemperatureSensor|type)\\b"
    },
    {
      "name": "string.quoted.double.arduino-ml",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.arduino-ml",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.arduino-ml",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.arduino-ml"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.arduino-ml"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.arduino-ml"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.arduino-ml"
        }
      ]
    }
  }
}